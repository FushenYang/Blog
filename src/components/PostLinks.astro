---
import DateFormatter from "./DateFormatter.astro";

const { posts, title } = Astro.props;
---

<div class="border w-full my-4 py-4 px-3">
  <div class="text-2xl font-bold mb-8">所有{title}链接如下：</div>
  <ul class="link-list space-y-2">
    {
      posts.map((post: { slug:string,data: { pubDate: Date; title: unknown; }; }) => (
        <li class="list-item">
          [ <DateFormatter date={post.data.pubDate} />]
          <a
            class="text-blue-500 hover:text-blue-700 underline transition duration-300 ease-in-out"
            href={"/" + post.slug}
          >
            {post.data.title}
          </a>
        </li>
      ))
    }
  </ul>
</div>
