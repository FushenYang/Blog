---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { sortByPubDate } from "../lib/posts";
import PostLinks from "../components/PostLinks.astro";

const books = sortByPubDate(await getCollection("books"));

const devs = await getCollection("devs");
const sortedDevs = sortByPubDate(devs);

const notes = await getCollection("notes");
const sortedNotes = sortByPubDate(notes);
const pageTitle = "博客文章目录";


---

<Layout title={pageTitle}>

  <PostLinks title="读书笔记" posts={books}></PostLinks>
  <PostLinks title="开发笔记" posts={sortedDevs}></PostLinks>
  <PostLinks title="随笔文章" posts={sortedNotes}></PostLinks>

</Layout>
