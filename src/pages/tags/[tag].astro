---
import BaseLayout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  //const allPosts:MarkdownInstance<Record<string, any>>[] = await Astro.glob('../posts/*.md');
  const allPosts = await getCollection("books");
  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.data.tags).flat()),
  ];
  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.tags.includes(tag)
    );
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
const filteredPosts = posts.filter((post) => post.data.tags?.includes(tag));
---

<BaseLayout title={tag}>
  <div class="border w-full my-4 py-4 px-3">
    <div class="text-2xl font-bold mb-8">包含「{tag}」标签的文章：</div>
    <ul class="link-list space-y-2">
      {
        filteredPosts.map((post) => (
          <li>
            <a
              class="text-blue-500 hover:text-blue-700 underline transition duration-300 ease-in-out"
              href={"/" + post.data.path}
            >
              {post.data.title}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</BaseLayout>
